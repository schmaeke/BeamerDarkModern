  \definecolor{lightcyan}{HTML}{c4f0ff}

  \colorlet{block-bg}{default-bg!50!darkgray}
\fi

\colorlet{accent}{cyan}

% Title frame
\setbeamercolor*{title}{bg = default-bg, fg = accent}

% Text
\setbeamercolor*{normal text}{bg = default-bg, fg = default-fg}
\setbeamercolor*{inverted text}{bg = default-fg, fg = default-bg}

% Frame background
\setbeamercolor*{background canvas}{bg = default-bg}

% Structure
\setbeamercolor*{structure}{fg = accent}

% Section titles and toc
\setbeamercolor*{section in head/foot}{fg = accent}
\setbeamercolor*{section in toc}{fg = default-fg}
\setbeamercolor*{section in toc shaded}{fg = default-fg!50!default-bg}

% Alerted text
\setbeamercolor*{alerted text}{fg = accent}

% Blocks
\setbeamercolor*{block title}{bg = block-bg, fg = accent}
\setbeamercolor*{block body}{bg = block-bg}

\setbeamercolor*{block title example}{bg = block-bg, fg = green}
\setbeamercolor*{block body example}{bg = block-bg}

\setbeamercolor*{block title alerted}{bg = block-bg, fg = red}
\setbeamercolor*{block body alerted}{bg = block-bg}

% Bibliography
\setbeamercolor{bibliography item}{fg = red}
\setbeamercolor{bibliography entry author}{fg = accent}
\setbeamercolor{bibliography entry title}{fg = default-fg}
\setbeamercolor{bibliography entry location}{fg = default-fg}
\setbeamercolor{bibliography entry note}{fg = default-fg}
