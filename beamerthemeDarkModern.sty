% Load required packages
\RequirePackage{xcolor}
\RequirePackage{hyperref}
\RequirePackage{tikz}

% Load individual sub-themes
\usecolortheme{DarkModern}
\usefonttheme{DarkModern}
\useinnertheme{DarkModern}
\useoutertheme{DarkModern}

% Additional commands
\newcommand{\standoutframe}[2]{%
	\begin{frame}[plain]
		\begin{tikzpicture}[remember picture, overlay]
			\usebeamercolor{title}
			\node[fg, inner sep = 5mm, draw = gray, minimum height = 20mm, rounded corners = 2mm] (box) at (current page) {%
				\usebeamerfont{title}%
				\begin{minipage}{0.8\paperwidth}
					\centering#1%
				\end{minipage}
			};
			\node[gray, fill = bg, left, shift = {(-5mm, 0mm)}] at (box.north east) {\huge#2};
		\end{tikzpicture}
	\end{frame}
	\addtocounter{framenumber}{-1}
}

\newcommand{\sectionframe}[1]{%
	\section{#1}
	\standoutframe{#1}{\MakeUppercase\sectionname\enspace\thesection}
}

\newcommand{\weblink}[1]{\href{http://#1}{\texttt{#1}}}
