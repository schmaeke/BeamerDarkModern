% Load required packages
\RequirePackage{xcolor}
\RequirePackage{hyperref}
\RequirePackage{tikz}

% Additional commands (used in the themes)
\newcommand{\highlight}[4]{%
	\node[#3, inner sep = 5mm, minimum height = 20mm] (content) at (#1) {%
		\begin{minipage}[c]{#2}
			\hsize=0pt%
			\hsize=\textwidth%
			\centering #4%
		\end{minipage}
	};
	\draw[#3, line width = 1mm, opacity = 0.3] (content.north west) ++(0mm, -4mm) -- ++(0mm, 2mm) arc(180:90:2mm) -- ++(2mm, 0mm);
	\draw[#3, line width = 1mm, opacity = 0.3] (content.north east) ++(0mm, -4mm) -- ++(0mm, 2mm) arc(0:90:2mm) -- ++(-2mm, 0mm);
	\draw[#3, line width = 1mm, opacity = 0.3] (content.south west) ++(0mm, 4mm) -- ++(0mm, -2mm) arc(-180:-90:2mm) -- ++(2mm, 0mm);
	\draw[#3, line width = 1mm, opacity = 0.3] (content.south east) ++(0mm, 4mm) -- ++(0mm, -2mm) arc(0:-90:2mm) -- ++(-2mm, 0mm);
}


% Load individual sub-themes
\usecolortheme{DarkModern}
\usefonttheme{DarkModern}
\useinnertheme{DarkModern}
\useoutertheme{DarkModern}

% Additional commands
\newcommand{\standoutframe}[1]{%
	{
		\usebeamercolor{normal text}
		\begin{frame}[plain]
			\begin{tikzpicture}[remember picture, overlay]
				\usebeamercolor{section in head/foot}
				\highlight{current page}{0.8\paperwidth}{fg}{#1}
			\end{tikzpicture}
		\end{frame}
	}
	\addtocounter{framenumber}{-1}
}

\newcommand{\sectionframe}[1]{%
	\standoutframe{\section{#1}\usebeamerfont{title}#1}%
}

\newcommand{\weblink}[1]{\href{http://#1}{\texttt{#1}}}
